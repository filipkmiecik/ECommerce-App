@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
@inject SignInManager<IdentityUser> SignInManager


<html>
<head>
    <link href="~/content/site.css" rel="stylesheet"/>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="Nav">
        <div class="N">
            <ul class="NavWrapper">
                <li class="NavWrapperItem"><a asp-controller="Home" asp-action="Index" class="NavWrapperLink">Home</a></li>
                <li class="NavWrapperItem"> <a asp-controller="Opinion" asp-action="Index" class="NavWrapperLink">Opinion</a></li>



                @if (SignInManager.IsSignedIn(User))
                {
                    <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm" method="post">
                        
                            <li> <a class="NavWrapperLink" href="javascript:document.getElementById('logoutForm').submit()">Logout</a></li>
                        
                    </form>
                }
                else
                {
                        <li> <a id="registerLink" asp-controller="Account" asp-action="Register" class="NavWrapperLink">Register</a></li>
                        <li> <a id="loginLink" asp-controller="Account" asp-action="Login" class="NavWrapperLink">Logowanie</a></li>  
                }

            </ul>
        </div>

    </nav>
    <div>
        @RenderBody()
    </div>
</body>
</html>
