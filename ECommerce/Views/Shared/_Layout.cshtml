@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
@inject SignInManager<IdentityUser> SignInManager


<html>
<head>
    <link href="~/content/site.css" rel="stylesheet"/>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="Nav">
        <div class="N">
            <ul class="NavWrapper">
                <li class="NavWrapper__Item"><a asp-controller="Home" asp-action="Index" class="NavWrapper__Link">Home</a></li>
                <li> <a asp-controller="Opinion" asp-action="Index">Opinion</a></li>
               
            </ul>
        </div>

        @if (SignInManager.IsSignedIn(User))
        {
            <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm" method="post">
                <ul>
                    <li> <a href="javascript:document.getElementById('logoutForm').submit()">Logout</a></li>
                </ul>
            </form>
        }
        else
        {
            <ul>
                <li> <a id="registerLink" asp-controller="Account" asp-action="Register">Register</a></li>
                <li> <a id="loginLink" asp-controller="Account" asp-action="Login">Logowanie</a></li>
            </ul>
        }

    </nav>
    <div>
        @RenderBody()
    </div>
</body>
</html>
